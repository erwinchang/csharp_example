<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Row="0">
            <Button x:Name="btnTest" Content="Test" Click="btnTest_Click"/>
        </Grid>
        <Grid Row="1">
            <StackPanel Margin="10">
                <local:MyUserControl Width="200" Height="120"
                                     BackgroundColor="#00AED8"
                                     Header="I'm Header 1"
                                     ContentText="Hello World, this is my first control!"/>
                <local:MyUserControl Width="200" Height="120"
                                     BackgroundColor="#FFA0A0"
                                     Header="I'm Header 2"
                                     ContentText="Hello World, this is my second control!"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
