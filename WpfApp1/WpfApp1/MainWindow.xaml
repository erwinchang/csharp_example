<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Name="my_Panel">
            <Button Content="Test" Width="200" Height="40" Name="btnTest" Click="btnTest_Click"/>
            <Button Content="Clear" Width="200" Height="40" Name="btnClear" Click="btnClear_Click"/>
        </StackPanel>
        <Button x:Name="myButton" Width="200" Height="40" Grid.Row="1" />
    </Grid>
</Window>
